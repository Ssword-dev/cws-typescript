{
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": [
      "node",
      "jest"
    ],
    "alwaysStrict": true,
    "strict": true,
    "outDir": "./dist"
  }
}